<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_toolbar"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="18dp"
        android:gravity="center_vertical"
        android:id="@+id/line1">

        <ImageView
            android:id="@+id/image44"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_online"
            android:scaleType="fitXY"
            android:layout_centerVertical="true" />

        <TextView
            android:textColor="#383838"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="在线客服"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image44"
            android:layout_marginStart="10dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_rg"
            android:id="@+id/image2"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        style="@style/Line"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="18dp"
        android:gravity="center_vertical"
        android:id="@+id/line2">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_telephone"
            android:scaleType="fitXY"
            android:layout_centerVertical="true" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/image3">


                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="#383838"
                    android:textSize="15sp"
                    android:text="电话客服"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     />

                <TextView
                    android:textSize="12sp"
                    android:textColor="#aaaaaa"
                    android:layout_marginTop="10dp"
                    android:text="服务时间：9:00 - 18:00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18" />
            </com.zhy.autolayout.AutoLinearLayout>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_rg"
            android:id="@+id/image6"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        style="@style/Line"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="18dp"
        android:gravity="center_vertical"
        android:id="@+id/line6">

        <ImageView
            android:id="@+id/image5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_qq"
            android:scaleType="fitXY"
            android:layout_centerVertical="true" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image5">


            <TextView
                android:layout_marginTop="8dp"
                android:textColor="#383838"
                android:textSize="15sp"
                android:text="添加QQ群：99500000001"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:textSize="12sp"
                android:textColor="#aaaaaa"
                android:layout_marginTop="10dp"
                android:text="服务时间：9:00 - 18:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView15" />
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_rg"
            android:id="@+id/image1"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        style="@style/Line"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"/>
</LinearLayout>