            <FrameLayout
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">
                <ImageButton
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/ic_photo"
                    android:id="@+id/btn_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/img_close"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    android:src="@mipmap/ic_close_pic"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </FrameLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView style="@style/Line" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <Button
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentLeft="true"
                android:text="添加"
                android:textColor="@color/white"
                android:background="@drawable/btn_selector"
                android:id="@+id/btn_add"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp" />
            <Button
                android:id="@+id/btn_upload"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentRight="true"
                android:text="上传"
                android:textColor="@color/white"
                android:background="@drawable/btn_selector"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp" />

        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView style="@style/Line"
            android:layout_marginTop="15dp"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#e1edff"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="编码"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="状态"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="序号"
                android:gravity="center"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView style="@style/Line"
            />
        <com.test.dynamic.widget.MyListViewInScrollView
            android:id="@+id/rvRecentMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rv_divider_color="@color/line"
            app:rv_divider_size="1px"/>
    </com.zhy.autolayout.AutoLinearLayout>
</ScrollView>