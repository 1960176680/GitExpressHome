<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入  库  员："
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:id="@+id/vLinePhone"
            style="@style/Line"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入库时间："
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            style="@style/Line"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_scan_blue"
                android:padding="10dp"

                />

            <EditText
                android:id="@+id/et_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入或扫描条形码"
                android:layout_marginLeft="10dp"
                android:theme="@style/MyEditText"/>

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView style="@style/Line" />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品        类："
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/et_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:theme="@style/MyEditText"/>
            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@mipmap/pull"
                android:padding="15dp"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            style="@style/Line"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国        家："
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/et_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:theme="@style/MyEditText"
                />

            <ImageView
                android:id="@+id/iv_country"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@mipmap/pull"
                android:padding="15dp"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            style="@style/Line"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产        地："
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/et_birthplace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:theme="@style/MyEditText"/>
            <ImageView
                android:id="@+id/iv_birthplace"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@mipmap/pull"
                android:padding="15dp"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            style="@style/Line"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="容        量："
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/et_capacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:theme="@style/MyEditText"/>
            <ImageView
                android:id="@+id/iv_capacity"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@mipmap/pull"
                android:padding="15dp"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            style="@style/Line"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年        份："
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/et_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:theme="@style/MyEditText"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            style="@style/Line"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数        量："
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/et_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:theme="@style/MyEditText"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            style="@style/Line"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前位置："
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:theme="@style/MyEditText"/>

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView style="@style/Line" />


        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
